// BUDGET HEADER

.FeatureHeader {
  height: 17rem;
}
.BudgetHeaderProgBarContainer {
	background: #f2f2f2;
  height: 1.3rem;
 	margin: 0 1rem;
 	position: relative;
 	top: 2rem;
}
.BudgetHeaderProgBar {
	background-image: linear-gradient(to right, #a7cc74, #00f48e);
  display: block;
  height: 100%;
  width: 0%;
  transition: all 900ms cubic-bezier(1, 0, 0, 1);
}
.ProgBarMarker {
  height: 2rem;
  width: 1px;
  background: black;
  position: absolute;
  left: 20%;
  top: -.3rem;
}
.BudgetDaysLeft {
  text-align: center;
  position: relative;
  top: 6rem;
  font-size: .9rem;
}
.BudgetTotal {
  font-size: .9rem;
  margin: -2rem 1rem 0 0;
  float: right;
  position: relative;
  top: 5rem;
}

// BUDGETS

.ProgBarContainer {
  background: #f2f2f2;
  height: 5px;
  width: 100%;
  margin: 0 auto;
}
.Progress {
  background-image: linear-gradient(to right, #00f48e, #a7cc74);
  display: block;
  height: 100%;
  width: 0%;
  transition: all 600ms cubic-bezier(1, 0, 0, 1);
}
.DangerZone {
  background-image: linear-gradient(to right, #FAD961, red);
}
.OverBudgetBarContainer {
  width: 100%;
  height: 5px;
}
.OverBudgetBar {
  display: block;
  background-image: linear-gradient(to right, #9F041B, #F5515F);
  height: 100%;
  width: 96vw;
}
.OverBudgetContainer {
  background: #ffe2e6;
}
.EditBudgetsBtnClose {
  background: url("_img/_icon/dark/close.svg") no-repeat;
  background-size: 100%
  height: 24px;
  width: 24px;
  position: absolute;
  right: 1rem;
  text-indent: -9999px;
  pointer: cursor;
  top: 1rem;
}

