input[type=text]  {
  border: none;
  margin-left: -3px;
  border-bottom: 1px solid hsla(0, 0%, 0%, 0.12);
  transition: all 200ms ease-out;
  border-radius: 0;
  padding: 0;
  padding-bottom: 10px;
}
input[type=text]:focus {
  border-color: black;
  outline: none;
}
.Frap {
  height: 50px;
  outline: none;
  text-align: right;
  //border-radius: 100px;
  border: none;
  //box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  cursor: pointer;
  font-size: .9rem;
  background-color: transparent;
  //background-color: red;
  //background-image:
    linear-gradient(
      to right,
      #FF6100,
      #FF000D,
      #500072
    );
  z-index: 99;
  color: black;
  //font-family: typeface-body-bold;
  position: fixed;
  top: 6px;
  right: 16px;
  transition: all 200ms ease-out;
  opacity: 1;
}
.Frap.KeyboardOn {
  top: calc(100vh - 140px);
}
.Frap.Inactive {
  transform: translateY(10px);
  opacity: 0;
}
