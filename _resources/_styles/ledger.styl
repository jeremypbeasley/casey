.LedgerRow .ProgBarContainer {
  margin-top: .9rem;
}
.LedgerRow .OverBudgetBarContainer {
  margin-top: .9rem;
}
.RedText {
  opacity: 1;
  color: red;
}
.LedgerCellCenter {
  position: absolute;
  left: 30%
}
