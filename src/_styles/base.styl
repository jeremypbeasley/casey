html
  min-height 100%

*
  -webkit-tap-highlight-color rgba(0, 0, 0, 0)  
  -webkit-font-smoothing antialiased
  font-smoothing antialiased
  box-sizing border-box

body {
  height: 100%;
  overflow-y: auto;
  overflow-x: hidden;
  margin: 0;
  background: white;
  padding-bottom: 10vw;
  font-family: typeface-body
}
  
.hidden
	display none
	opacity 0
 
.StylesContainer {
  padding: 50px;
  background-color: color-creme;
}
.ContentContainer {
  top: 50px;
  position: absolute;
  background: white;
  width: 100%;
  height: calc(100vh - 50px);
  overflow: scroll;
} 
.ContentContainer.Active {
  z-index: 800;
}


 
 


