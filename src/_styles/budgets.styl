// BUDGET HEADER

.BudgetHeader {
  border-bottom: 1px solid #f2f2f2; 
}

.BudgetHeaderProgBarContainer {
	background: #f2f2f2;
  height: 6px;
 	margin: 0 1rem;
 	position: relative;
 	top: -7vh;
}

.BudgetHeaderProgBar {
	background-image: linear-gradient(to right, #a7cc74, #00f48e);
  display: block;
  height: 100%;
  width: 45%; 
}

.ProgBarMarker {
  height: 24px;
  width: 1px;
  background: black;
  position: absolute;
  left: 20%;
  margin-top: -15px;
  opacity: .5;
}

.ButtonBudgetSort {
	background: url("_img/_icon/dark/sort.svg") no-repeat;
