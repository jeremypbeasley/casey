  position: relative;
  top: -.65rem;
  left: 89vw;
  text-indent: -9999px;
 }
 
.BudgetDaysLeft {
  text-align: center;
  position: relative;
  top: 5rem;
  font-size: .9rem;
}

.BudgetTotal {
  font-size: .9rem;
  margin: -2rem 1rem 0 0;
  float: right;
  position: relative;
