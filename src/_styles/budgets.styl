}


// BUDGETS

.BudgetContainer {
  position: relative;
  height: 5rem; 
}

.BudgetTitle {
  float: left;
  color: black;
  font-size: .9rem;
}

.BudgetProgressAmt {
  float: right;
  font-size: .9rem;
}

.ProgBarContainer {
  background: #f2f2f2;
  height: 5px;
  width: 92%;
  margin: 0 auto;
  position: relative;
  top: 3.3rem;
}

.Progress {
  background-image: linear-gradient(to right, #00f48e, #a7cc74);
  display: block;
  height: 100%;
  width: 45%; 
}

.DangerZone {
  display: block;
  background-image: linear-gradient(to right, #FAD961, #F76B1C);
  height: 100%
  width: 90%
}

.OverBudgetBarContainer {
  width: 100%;
  height: 5px;
  position: relative;
  top: 3.3rem;
  padding: 0 0 0 1rem;
}

.OverBudgetBar {
  display: block;
  background-image: linear-gradient(to right, #9F041B, #F5515F);
  height: 100%;
  width: 100%;
}

.OverBudgetContainer {
  background: #ffe2e6;
}

