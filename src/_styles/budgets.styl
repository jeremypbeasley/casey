// BUDGET HEADER

.BudgetsViewHeader {
  height: 18rem; 
}

.BudgetHeaderProgBarContainer {
	background: #f2f2f2;
  height: 1.3rem;
 	margin: 0 1rem;
 	position: relative;
 	top: .5rem;
}

.BudgetHeaderProgBar {
	background-image: linear-gradient(to right, #00f48e, #a7cc74);
  display: block;
  height: 100%;
  width: 45%; 
}

.ProgBarMarker {
  height: 2rem;
  width: 1px;
  background: black;
  position: absolute;
  left: 20%;
  top: -.3rem;
}

.ButtonSort {
	background: url("_img/_icon/dark/sort.svg") no-repeat;
