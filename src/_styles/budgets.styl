// BUDGET HEADER

.BudgetHeader {
	height: 8rem;
  border-bottom: 1px solid #f2f2f2; 
}

.BudgetHeaderProgBarContainer {
	background: #f2f2f2;
  height: 6px;
 	margin: 0 1rem;
 	position: relative;
 	top: -7vh;
}

.BudgetHeaderProgBar {
	background-image: linear-gradient(to right, #a7cc74, #00f48e);
  display: block;
  height: 100%;
  width: 45%; 
}

.ProgBarMarker {
  height: 24px;
  width: 1px;
  background: black;
  position: absolute;
  left: 20%;
  margin-top: -15px;
  opacity: .5;
}

.ButtonBudgetSort {
	background: url("_img/_icon/dark/sort.svg") no-repeat;
	height: 24px;
	width: 24px;
	position: relative;
	top: -6vh;
	left: 81vw;
	text-indent: -9999px;
}

.ButtonBudgetSettings {
  background: url("_img/_icon/dark/gear.svg") no-repeat;
  height: 24px;
  width: 24px;
  position: relative;
  top: -9.5vh;
  left: 89vw;
  text-indent: -9999px;
 }
 
.BudgetDaysLeft {
  margin: -2rem 0 0 1rem;
  float: left;
  opacity: .5;
}

.BudgetTotal {
  font-size: .9rem;
  margin: -2rem 1rem 0 0;
  float: right;
}


// BUDGETS

.BudgetContainer {
	background: red;
	border-bottom: 1px solid #f2f2f2;
	padding-right: 1rem;
}

.ProgBarContainer {
background: #f2f2f2;
height: 6px;
width: 90%;
}

.Progress {
  background-image: linear-gradient(to right, #a7cc74, #00f48e);
  display: block;
  height: 100%;
  width: 45%; 
}

.DangerZone {
  background-image: linear-gradient(to right, #ea1515, #d48c8a);
  width: 90%
}

.OverBudget {
  background-image: linear-gradient(to right, #ea1515, #d48c8a);
  width: 100%;
}

.OverBudgetContainer {
  background: #ffe2e6;
}

.BudgetMet {
  background: #9fdef2;
  width: 100%;
}