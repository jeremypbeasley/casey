.ListIndex {
  max-width: 375px;
}
.ListItemContents {
  border-bottom: 1px solid hsla(0,0%,0%,.12);
  box-shadow: none;
/*   transition: box-shadow 200ms ease-out;
  transition: top 200ms ease-out; */
  cursor: pointer;
  position: relative;
  background: white;
  top: 0px;
  width: 100%;
  height: 67px;
}
/* .ListItemContents:hover {
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  z-index: 999;
} */
.ListItemContents.Open {
  position: fixed;
/*   top: 0px;
  height: 100vh; */
  z-index: 999;
  box-shadow: 0 10px 20px rgba(0,0,0,0.19), 0 6px 6px rgba(0,0,0,0.23);
  z-index: 999;
}
.ListItemTitle {
  padding: 24px 16px;
}
.ListItemFiller {
  position: relative;
  display: block;
  background: red;
  height: 0px;
}
.ListItemClose {
  display: none;
  position: absolute;
  top: 16px;
  right: 16px;
  background: red;
  width: 32px;
  height: 32px;
  border-radius: 1000px;
}
.ListItemContents.Open .ListItemClose {
  display: block;
}
