// STATUS SECTION

.YourStatus {
	background: #00f48e;
	width: 100%;
	height: 45vh;
}

.YourStatusTitle {
	color: black;
	opacity: .5;
	position: relative;
	top: 11vh;
	left: 1rem;
	font-size: .7rem;
}

.YourStatusAnnouncement {
	position: relative;
	top: 16vh;
	left: 1rem;
}

.YourStatusAnnouncement p {
	color: white;
	font-size: 8vw;
	line-height: 130%;
	font-weight: bold;
	padding-right: 2rem;
}

// YOUR MONEY OVERVIEW

.ContentContainer {
	height: 92vh;
}

.ClearFloat{
	clear: both;
}

.YourMoney {
	height: 100%;
	width: 100%;
}

.YourMoneySection {
	height: 18vh;
	width: 50%;
	float: left;
}

.Earned {
	background: blue;
}

.WillEarn {
	background: green;
}

.Spent {
	background: yellow;
}

.RemainingBudget {
	background: red;
}

.WhatsLeft {
	background: gray;
	width: 100%;
	height: 13vh;
}