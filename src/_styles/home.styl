	background: #00f48e;
	width: 100%;
	overflow: auto;
}

.YourStatusTitle {
	color: black;
	font-size: .7rem;
}

.YourStatusAnnouncement {
}

.YourStatusAnnouncement p {
	color: white;
	font-size: 8vw;
