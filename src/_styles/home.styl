// YOUR MONEY OVERVIEW

.ClearFloat{
	clear: both;
}

.YourMoneySection {
	width: 50%;
	float: left;
}

.YourMoneyAmt {
	font-size: 1.7rem;
	font-weight: bold;
	color: #00f48e;
}

.Earned {
	border-right: solid 1px #f2f2f2;
	border-bottom: solid 1px #f2f2f2;
}

.WillEarn {
	border-bottom: solid 1px #f2f2f2;
}

.Spent {
	border-bottom: solid 1px #f2f2f2;
	border-right: solid 1px #f2f2f2;
}

.RemainingBudget {
	border-bottom: solid 1px #f2f2f2;
}

.WhatsLeft {
	width: 100%;
}
