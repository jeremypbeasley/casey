body {
	padding: 0;
}

.LogInContainer {
	background: red;
	height: 100vh;
	width: 100vw;
}

.LogInGreetingContainer {
	height: 20%;
	position: relative;
	top: 25vh;
	text-align: center;
	padding: 1rem;
}

.LogInGreeting {
	font-size: 2.5rem;
	text-align: center;
	padding: 0;
	margin: 0;
	line-height: 125%;
	font-weight: bold;
	color: white;
}

.SignUpCTA {
	position: relative;
	top: 35%;
	text-align: center;
	height: 7%;
	width: 60%;
	font-size: .7rem;
	opacity: .5;
	margin: 0 auto;
}

.LogInDividerContainer {
	height: 1px;
	opacity: .1;
	position: relative;
	top: 34%;
}

.LogInDivider {
	height: 1px;
	width: 60%
	border-bottom: 1px solid;
	margin: 0 auto;
}

.LogInCTA {
	position: relative;
	top: 38%;
	text-align: center;
	height: 7%;
	font-size: .7rem;
	opacity: .5;	
}

.LogInAboutCasey {
	text-align: center;
	position: relative;
	top: 58%;
	font-size: .9rem;
}

.LogInAboutCasey a {
	opacity: .5;
	color: #fff;
}