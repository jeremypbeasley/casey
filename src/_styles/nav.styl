.AppNav {
	background: white;
	border-top: 1px solid #f2f2f2;
	font-size: .8rem;
	height: 50px;
	width: 100vw;
	position: fixed;
	top: 0;
	margin: 0;
	padding: 0;
	z-index: 999999;
	box-shadow: 0px 0px 2px 0px rgba(0,0,0,0.14), 0px 0px 4px 4px rgba(0,0,0,0.05)
}

.AppNav a {
	color: black;
}

ul {
	margin: 0;
	padding: 0;
}

.AppNav ul {
	display: flex;
	flex-direction: row;
	flex-wrap: wrap;
	justify-content: space-between;
	list-style: none;
	padding: 1.1rem 1rem 1rem 1rem;
}

.AppNav li {
	
}

.AppNavHome {
	opacity: .5;
}

.AppNavSpend {
	opacity: .5;
}

.AppNavBudget {
	opacity: .5;
}

.AppNavBills {
	opacity: .5;
}

.AppNavAccount {
	background: url("_img/_icon/dark/account.svg") no-repeat;
	background-size: 90%;	
	background-position: center center;
	height: 16px;
	width: 16px;
	opacity: .5;
	text-indent: -9999px;
}

.ActiveTab {
	font-weight: bold;
	opacity: 1;
}