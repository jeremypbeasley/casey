.Overlay {
  height: 100vh;
  width: 100vw;
  background: white;
  position: fixed;
  overflow: hidden;
  left: 0;
  top: 0;
  z-index: 9999;
  transition: all 200ms ease-out;
  opacity: 0;
  transform: scale(1.03);
}
.Overlay.Active { 
  opacity: 1;  
  transform: scale(1);
}
.OverlayClose {
  position: absolute;
  top: 16px;
  left: 16px;
  height: 32px;
  width: 32px;
  background: url(_img/_icon/dark/close.svg) no-repeat;
  background-size: 24px;
  background-position: center center;
  border-radius: 10000px;
  border: none;
  outline: none;
  text-indent: -999999px;
}
.OverlayContent {
  margin-top: 75px;
}