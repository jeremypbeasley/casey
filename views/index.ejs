<!DOCTYPE html>
<html>
<head>
   <title>Midas.</title>
  <meta charset="UTF-8">
  <meta content="width=device-width, initial-scale=1.0, user-scalable=no" name="viewport">
  <link href="master.css" rel="stylesheet">
  <script src="master.js"></script>
</head>
<body>
<div class="AppNav">
  <ul>
    <li class="AppNavHome">Home</li>
    <li class="AppNavSpend">Spend</li>
    <li class="AppNavBudget">Budget</li>
    <li class="AppNavBills">Bills</li>
    <li class="AppNavAccount">Account</li>
  </ul>
</div>
<div class="ContentContainer">
  <div class="ViewHeader">
    <div class="ViewLabel">Spend</div>
    <div class="ViewSettings">Settings</div>
    <div class="BankInfo">
      <div class="BankName">Wells Fargo</div>
      <div class="BankAccountName">Premium Checking Account (#XXXX)</div>
      <div class="BankSearch">Search</div>
    </div>
  <div class="TransactionContainer">
    <% for(var i=0; i<50; i++) {%>
      <div class="TransactionSingle">
        <div class="TransactionCategory">
        <% if(tranzactions[i].category) { %>
              <div><%= tranzactions[i].category[0] %></div>
          <% } else { %>
              <div class="Unlabeled">Unlabeled</div>
          <% } %>
        </div>
        <div class="TransactionVendor">
          <% if(tranzactions[i].name.length > 30) { %>
              <div> 
                <% var string = tranzactions[i].name;
                var trimmedString = string.substring(0, 30) + "...";%>
                <%= trimmedString %> 
              </div>
          <% } else { %>
              <div><%= tranzactions[i].name %></div>
          <% } %>
        </div>
        <div class="TransactionAmount">
          <%= tranzactions[i].amount.toFixed(2) %>
        </div>
      </div>
    <% } %>
  </div>
</div>
</body>
</html>

